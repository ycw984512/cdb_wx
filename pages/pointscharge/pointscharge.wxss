/* pages/pointscharge/pointscharge.wxss */

.points_wrap {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}

.points_list {
  width: 30%;
  border: 1px solid #1b82d1;
  display: flex;
  flex-direction: column;
  align-content: center;
  align-items: center;
  padding: 10rpx 0;
  border-radius: 20rpx;
  margin-top: 30rpx;
}

.active {
  width: 30%;
  border: 1px solid #1b82d1;
  display: flex;
  flex-direction: column;
  align-content: center;
  align-items: center;
  padding: 10rpx 0;
  border-radius: 20rpx;
  margin-top: 30rpx;
  background: #1b82d1;
  color: #fff;
}

.points_amount {
  font-weight: 700;
  font-size: 30rpx;
}

.points_integral {
  margin-top: 10rpx;
  font-size: 26rpx;
}

.submitBtn {
  width: 690rpx;
  height: 88rpx;
  line-height: 88rpx;
  color: #fff;
  text-align: center;
  background: #1b82d1;
  margin: 50rpx auto;
  border-radius: 50rpx;
  margin-bottom: 100rpx;
}
