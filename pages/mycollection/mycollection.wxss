.store {
  display: flex;
  position: relative;
  padding: 30rpx 0rpx 30rpx 0;
  background: #fff;
  width: 96%;
  margin: 0 auto;
  border-bottom: 1px solid #ccc;
}

.store_image image {
  width: 156rpx;
  margin-left: 30rpx;
  vertical-align: bottom;
  height: 156rpx;
}

.store_title {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-left: 30rpx;
}

.store_title view:nth-child(1) {
 font-size:28rpx;
font-family:PingFang-SC-Bold;
font-weight:bold;
color:rgba(51,51,51,1);
}

.store_title view:nth-child(2) {
 font-size:24rpx;
font-family:PingFang-SC-Medium;
font-weight:500;
color:rgba(102,102,102,1);
}

.store_title view:nth-child(3) {
 font-size:24rpx;
font-family:PingFang-SC-Medium;
font-weight:500;
color:rgba(153,153,153,1);
}

