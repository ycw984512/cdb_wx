.market_wrap {
  width: 94%;
  margin: 30rpx auto;
  display: flex;
  justify-content: flex-start;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #ccc;
  position: relative;
}

.market_wrap image {
  width: 80rpx;
  height: 80rpx;
}

.coupon {
  position: absolute;
  right: 20rpx;
  top: 0rpx;
  font-size: 26rpx;
  color: #fff;
  border: 1px solid #ccc;
  border-radius: 50rpx;
  background: #1b82d1;
  padding: 20rpx;             
}

.market_title {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
}

.market_title view {
  font-size: 30rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.market_title text {
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
}

.btn {
  width: 100%;
  height: 130rpx;
  border-top: 1px solid #ccc;
  box-shadow: #eee solid 1px;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 0rpx;
  background: #fff;
}

.btn_download {
  width: 690rpx;
  height: 88rpx;
  font-size: 32rpx;
  color: #fff;
  line-height: 88rpx;
  text-align: center;
  background: #1b82d1;
  border-radius: 60rpx;
}
