/* pages/mygift/mygift.wxss */
page{
  position: relative;
}

.gift_list {
  margin: 20rpx 30rpx 30rpx 30rpx;
}

.list_top {
  height: 150rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  color: #fff;
  background: linear-gradient(to bottom right, #00a2fd, #0bdddf);
}

.gift_title {
  font-size: 36rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
}

.gift_money {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  text-align: center;
}

.gift_price {
  font-size: 36rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
}

.gift_consume {
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  margin-top: 10rpx;
}

.list_bottom {
text-align:center;
padding:10px 0;
color:#00a2fd;
border:1px solid #0bdddf;
border-radius:5rpx;
font-size:30rpx;

}

.submitBtn{
  width: 690rpx;
  height: 88rpx;
  line-height: 88rpx;
  color: #fff;
  text-align: center;
  background: #1b82d1;
  margin: 300rpx auto;
  border-radius: 50rpx;
  margin-bottom: 100rpx;

}

.backindex {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  position: fixed;
  bottom: 12%;
  right: 1%;
  z-index: 900;
  font-size: 24rpx;
  color: #fff;
  padding: 20rpx;
  text-align: center;
  letter-spacing: 5rpx;
  line-height: 30rpx;
}

.backindex image {
  width: 100rpx;
  height: 100rpx;
}