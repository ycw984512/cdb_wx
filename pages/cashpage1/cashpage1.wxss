page {
  background: #f5f5f5;
}
view{
  box-sizing: border-box;
}
.zhyue{
  width: 100%;
  display: flex;
  align-items: center;
  color: #666;
  font-size: 30rpx;
  background: #fff;
  padding: 25rpx;
  margin-bottom: 5rpx;
}
.zhyue view:first-child{
  width: 22%;
}
.zhyue view:last-child{
  width: 78%;
}
.zhyue view:last-child text{
  width: 120rpx;
  text-align: center;
  display: inline-block;
  margin-right: 35rpx;
  border: 1rpx solid #ddd;
}
.zhyue view:last-child text.sel{
  border: 1rpx solid #1b82d1;
  color: #1b82d1;
}
.all{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.all view:last-child{
  width: 200rpx;
  text-align: center;
  color: #1b82d1;
}
.txwx{
  width: 100%;
  padding: 0 8rpx;
  margin-top: 25rpx;
  background: #fff;
  padding-bottom: 35rpx;
}
.form-group{
  width: 100%;
  padding: 20rpx;
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #666;
  border-bottom: 1rpx solid #ddd;
}
.form-group view:first-child{
  margin-right: 10rpx;
  width: 180rpx;
  text-align: right;
}
button::after{
  border: none;
}
button{
  width: 90%;
  margin: 0 auto;
  margin-top: 50rpx;
  background: #1b82d1;
  color: #fff;
  font-size: 30rpx;
}

