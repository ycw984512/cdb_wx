
.top_wrap{
  position: fixed;
  top: 0;
  left: 0;
  height: 260rpx;
  width: 100%;
  background: #fff;
  z-index: 99;
}
.store {
  display: flex;
  position: relative;
  padding: 20rpx 0rpx 30rpx 0;
  border-top: 1px solid #1b82d1;
  background: #1b82d1;
}

.store_image image {
  width: 156rpx;
  margin-left: 20rpx;
  vertical-align: bottom;
  height: 156rpx;
}

.store_title {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin-left: 20rpx;
}

.store_title view:nth-child(1) {
  font-size: 30rpx;
  font-weight: 700;
  color: #fff;
}

.store_title view:nth-child(2) {
  font-size: 24rpx;
   color: #fff;
}

.store_title view:nth-child(3) {
  font-size: 24rpx;
   color: #fff;
}

.store_flag {
  display: flex;
  position: absolute;
  right: 50rpx;
  top: 78rpx;
}

.store_flag image {
  width: 48rpx;
  height: auto;
}
.flag_phone,.flag_collection,.flag_location {
  width: 50rpx;
  height:  50rpx;
  background: #fff;
  margin-left: 10rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius: 15rpx;
}


.header_tab {
  display: flex;
}

.header_tab view {
  flex: 1;
}

.order_contain {
  display: flex;
  flex-direction: row;
  background: #fff;
}

.search_input {
  position: relative;
  margin: 15rpx;
}

.search_input input {
  width: 200rpx;
  height: 50rpx;
  border: 1px solid #999;
  border-radius: 40rpx;
  margin-top: -1rpx;
  padding-left: 58rpx;
}

.holderClass {
  margin-left: 45rpx;
  font-size: 30rpx;
}

.search_input image {
  width: 48rpx;
  height: auto;
  position: absolute;
  top: 1rpx;
  left: 10rpx;
  margin-left: 5rpx;
}

.tab_bar {
  margin:20rpx;
}

.border_middle {
  box-sizing: border-box;
  width: 710rpx;
  margin: 0 auto;
  height: 2rpx;
  background: #999;
}

.index_introduction {
  font-size: 24rpx;
  text-indent: 2em;
  line-height: 45rpx;
  color: #999;
}

.index_image image {
  width: 100%;
  margin-top: 15rpx;

}

